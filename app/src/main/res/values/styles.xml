<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/noto_sans_display</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonStyleInset">@style/ButtonStyleInset</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BottomMenuTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/bottom_nav_item_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="TextTitle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:fontFamily">@font/noto_sans_display</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">@dimen/text_size_24sp</item>
        <item name="android:layout_marginTop">@dimen/bigMargin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RegularText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/regularPadding</item>
        <item name="android:paddingEnd">@dimen/regularPadding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CommonButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/border_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeightRegular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="CommonImageView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bigMargin</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorWhite</item>
        <item name="materialThemeOverlay">@style/FabOverlay</item>
    </style>

    <style name="FabOverlay">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
    </style>

    <style name="ButtonStyleInset" parent="TextAppearance.AppCompat.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CommonEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">@dimen/regularMargin</item>
        <item name="android:layout_marginEnd">@dimen/regularMargin</item>
        <item name="android:backgroundTint">@color/editTextUnderLineColor</item>
    </style>

    <style name="CommonEditText.Password" parent="CommonEditText">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">@dimen/regularMargin</item>
        <item name="android:layout_marginRight">@dimen/regularMargin</item>
    </style>

    <style name="CommonIcon" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/regularMargin</item>
    </style>

    <style name="TextMessage" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:alpha">0.6</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/F7A4A4</item>
    </style>

    <style name="CommonProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminateTint">@color/colorTheme</item>
        <item name="android:drawablePadding">@dimen/regularPadding</item>
    </style>

    <style name="TextMenuItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/regularPadding</item>
        <item name="android:layout_margin">@dimen/regularMargin</item>
        <item name="android:text">This is demo text</item>
    </style>

    <style name="EditTextNoBackground" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/regularPadding</item>
        <item name="android:layout_margin">@dimen/regularMargin</item>
        <item name="android:text">N/A</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="PersonalToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ctv_show_icon_search">false</item>
        <item name="ctv_type">TITLE</item>
    </style>

    <style name="PersonalScrollView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/view_size_24dp</item>
    </style>

    <style name="BoxEditText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/view_size_12dp</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:background">@drawable/bg_solid_radius_4dp</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/regularMargin</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="CommonSmartMaterialSpinner">
        <item name="smsp_arrowPaddingRight">@dimen/view_size_4dp</item>
        <item name="smsp_arrowPaddingTop">@dimen/view_size_4dp</item>
        <item name="smsp_enableErrorLabel">false</item>
        <item name="smsp_enableFloatingLabel">false</item>
        <item name="smsp_hintColor">@color/colorText</item>
        <item name="smsp_itemColor">@color/textColor</item>
        <item name="smsp_itemListColor">@color/colorText</item>
        <item name="smsp_itemListHintBackgroundColor">@color/colorTextHint</item>
        <item name="smsp_itemListHintColor">@color/colorWhite</item>
        <item name="smsp_selectedItemListColor">@color/textColor</item>
        <item name="smsp_errorTextColor">@color/colorRed</item>
        <item name="smsp_errorTextSize">@dimen/text_size_12sp</item>
    </style>

    <style name="CommonTextError">
        <item name="android:layout_marginTop">@dimen/view_size_4dp</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <color name="F7A4A4">#F7A4A4</color>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/regularPadding"
    tools:context=".presentation.ui.splash.walkThrough.WalkThroughFirstFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView2"
            style="@style/CommonImageView"
            android:src="@drawable/img_manage_warranty"/>

        <TextView
            android:id="@+id/textView4"
            style="@style/TextTitle"
            android:text="@string/manage_warranty_by_technology"
            />

        <TextView
            style="@style/RegularText"
            android:layout_marginVertical="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="@string/msg_warranty_by_technology"
            app:layout_constraintBottom_toTopOf="@+id/indicator"
            />

        <com.rd.PageIndicatorView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/regularMargin"
            android:padding="@dimen/smallPadding"
            app:piv_animationType="fill"
            app:piv_count="6"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_padding="3dp"
            app:piv_radius="4dp"
            app:piv_select="0"
            app:piv_selectedColor="@color/colorRed"
            app:piv_strokeWidth="1dp"
            app:piv_unselectedColor="@color/colorGrey" />

        <Button
            android:id="@+id/btnTurnOnCamera"
            style="@style/CommonButton"
            android:text="@string/turn_on_camera"
            />
    </LinearLayout>

</LinearLayout>
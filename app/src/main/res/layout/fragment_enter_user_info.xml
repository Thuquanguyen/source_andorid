<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="@dimen/view_size_16dp">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/img_logo_with_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/btnContinue"
        android:layout_below="@+id/iv_check"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/bigMargin">

        <include layout="@layout/layout_information" />

    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        style="@style/CommonButton"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/bigMargin"
        android:layout_marginVertical="@dimen/view_size_16dp"
        android:text="@string/complete" />

</RelativeLayout>
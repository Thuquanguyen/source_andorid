<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/regularMargin"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/regularPadding"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extraMargin"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/colorGrey" />

        <TextView
            style="@style/RegularText"
            android:text="@string/or" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/colorGrey" />

    </LinearLayout>

    <TextView
        style="@style/RegularText"
        android:text="@string/login_by_social_network" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_facebook"
            style="@style/CommonIcon"
            android:src="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/ic_google"
            style="@style/CommonIcon"
            android:src="@drawable/ic_google" />

        <ImageView
            android:id="@+id/ic_zalo"
            style="@style/CommonIcon"
            android:src="@drawable/ic_zalo" />

    </LinearLayout>

</LinearLayout>
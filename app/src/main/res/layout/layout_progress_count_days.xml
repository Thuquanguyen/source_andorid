<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_radius_32dp">

    <ProgressBar
        android:id="@+id/pb_count_day"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_50dp"
        android:layout_marginStart="@dimen/view_size_36dp"
        android:indeterminate="false"
        android:max="100"
        android:padding="@dimen/view_size_8dp"
        android:progress="50"
        android:progressDrawable="@drawable/bg_progress_drawable" />

    <ImageView
        android:layout_width="@dimen/view_size_50dp"
        android:layout_height="@dimen/view_size_50dp"
        android:background="@drawable/bg_circle"
        android:padding="4dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tv_count_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/noto_sans_display_medium"
        android:includeFontPadding="false"
        android:text="60 ngÃ y"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold" />

</RelativeLayout>